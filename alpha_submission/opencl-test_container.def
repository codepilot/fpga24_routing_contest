BootStrap: docker
From: ubuntu:22.04

%post
	apt-get -y update
	apt-get -y install software-properties-common
	add-apt-repository -y ppa:ubuntu-toolchain-r/test
	apt -y update
	apt-get -y update
	apt-get -y install git build-essential wget python3
	apt install zlib1g-dev gcc-13 g++-13 -y libc6
	gcc -v
	update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-13 13 --slave /usr/bin/g++ g++ /usr/bin/g++-13
	update-alternatives --set gcc /usr/bin/gcc-13
	gcc -v
	wget https://github.com/Kitware/CMake/releases/download/v3.28.1/cmake-3.28.1-linux-x86_64.tar.gz
	tar -xzf cmake-3.28.1-linux-x86_64.tar.gz
	git clone https://github.com/codepilot/fpga-solver.git
	cd /fpga-solver
	git submodule init
	git submodule update
	../cmake-3.28.1-linux-x86_64/bin/cmake -S . -B build
	cd build
	../../cmake-3.28.1-linux-x86_64/bin/cmake --build . --config RelWithDebInfo -j

%runscript
	cd /fpga-solver/build/
        export OCL_ICD_ENABLE_TRACE=true
        export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:/opt/amdgpu-pro/lib64:/opt/amdgpu-pro/lib:/opt/amdgpu/lib64:/opt/amdgpu/lib
	./opencl-test
